<div class="jumbotron">
  <h3 class="text-center">Acessar Conta</h3>

  <hr>
  <%= form_for :session, url: login_path do |f| %>
  <div class="form-group">
    <%= f.label :cpf, 'CPF' %><br />
    <%= f.text_field :cpf, autofocus: true, class: "form-control", id: 'cpf', required: true,
        onkeypress: "return event.charCode >= 48 && event.charCode <= 57",
        placeholder: 'CPF' %>
  </div>

  <div class="form-group">
    <%= f.label :password, 'Senha' %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control", required: true,
      placeholder: 'Senha' %>
  </div>

  <div class="form-group">
      Não é cliente? <%= link_to "Cadastrar Conta", new_usuario_path %>

      <button type="submit" class="btn btn-dark float-right">Login</button>
  </div>

  <% end %>
</div>
